@{
    ViewData["Title"] = "Our Work";
}

<div class="container-fluid">
    <br />

    <h1 class="font-weight-light text-center mt-4 mb-0">@ViewData["Title"]</h1>

    <br>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-4 col-sm-6" data-toggle="modal" data-target="#modal">
                <a href="#lightbox" data-slide-to="0"><img src="~/content/gallery/gallery (10).jpg" class="img-thumbnail my-3"></a>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-6" data-toggle="modal" data-target="#modal">
                <a href="#lightbox" data-slide-to="1"><img src="~/content/gallery/gallery (11).jpg" class="img-thumbnail my-3"></a>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-6" data-toggle="modal" data-target="#modal">
                <a href="#lightbox" data-slide-to="2"><img src="~/content/gallery/gallery (12).jpg" class="img-thumbnail my-3"></a>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-6" data-toggle="modal" data-target="#modal">
                <a href="#lightbox" data-slide-to="3"><img src="~/content/gallery/gallery (13).jpg" class="img-thumbnail my-3"></a>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-6" data-toggle="modal" data-target="#modal">
                <a href="#lightbox" data-slide-to="4"><img src="~/content/gallery/gallery (14).jpg" class="img-thumbnail my-3"></a>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-6" data-toggle="modal" data-target="#modal">
                <a href="#lightbox" data-slide-to="5"><img src="~/content/gallery/gallery (2).jpg" class="img-thumbnail my-3"></a>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-6" data-toggle="modal" data-target="#modal">
                <a href="#lightbox" data-slide-to="6"><img src="~/content/gallery/gallery (8).jpg" class="img-thumbnail my-3"></a>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-6" data-toggle="modal" data-target="#modal">
                <a href="#lightbox" data-slide-to="7"><img src="~/content/gallery/gallery (7).jpg" class="img-thumbnail my-3"></a>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div id="lightbox" class="carousel slide" data-ride="carousel" data-interval="5000" data-keyboard="true">
                        <ol class="carousel-indicators">
                            <li data-target="#lightbox" data-slide-to="0"></li>
                            <li data-target="#lightbox" data-slide-to="1"></li>
                            <li data-target="#lightbox" data-slide-to="2"></li>
                            <li data-target="#lightbox" data-slide-to="3"></li>
                            <li data-target="#lightbox" data-slide-to="4"></li>
                            <li data-target="#lightbox" data-slide-to="5"></li>
                            <li data-target="#lightbox" data-slide-to="6"></li>
                            <li data-target="#lightbox" data-slide-to="7"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/content/gallery/gallery (10).jpg" class="w-100"
                                     alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="~/content/gallery/gallery (11).jpg" class="w-100"
                                     alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="~/content/gallery/gallery (12).jpg" class="w-100"
                                     alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="~/content/gallery/gallery (13).jpg" class="w-100"
                                     alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="~/content/gallery/gallery (14).jpg" class="w-100"
                                     alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="~/content/gallery/gallery (2).jpg" class="w-100"
                                     alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="~/content/gallery/gallery (8).jpg" class="w-100"
                                     alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="~/content/gallery/gallery (7).jpg" class="w-100"
                                     alt="">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#lightbox" role="button" data-slide="prev"><span class="carousel-control-prev-icon" aria-hidden="true"></span><span class="sr-only">Previous</span></a>
                        <a class="carousel-control-next" href="#lightbox" role="button" data-slide="next"><span class="carousel-control-next-icon" aria-hidden="true"></span><span class="sr-only">Next</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
